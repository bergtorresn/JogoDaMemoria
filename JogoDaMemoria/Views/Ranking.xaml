    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Ranking" Font="Bold" HorizontalOptions="CenterAndExpand" />
            <ListView x:Name="LView" HasUnevenRows="true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell IsEnabled="false">
                            <StackLayout Spacing="5" Orientation="Horizontal" Padding="15">
                                <Label Text="1"/>
                                <Label Text="Berg"/>
                                <Label Text="01:25"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>