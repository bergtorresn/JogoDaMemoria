                </Grid.ColumnDefinitions>
                <!-- BOTÃ•ES -->
                <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="0">
                    <Image x:Name="Btn1Frente" HeightRequest="35" VerticalOptions="FillAndExpand" BackgroundColor="White" Source="interrogacao.png" />
